<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_main"
    app:startDestination="@id/fragmentOnboarding">

    <fragment
        android:id="@+id/fragmentOnboarding"
        android:name="com.zhdanon.skillcinema.presentation.onboarding.FragmentOnboarding"
        android:label="FragmentOnboarding"
        tools:layout="@layout/fragment_onboarding" >
        <action
            android:id="@+id/action_fragmentOnboarding_to_fragmentTopCollections"
            app:popUpTo="@id/fragmentOnboarding"
            app:popUpToInclusive="true"
            app:destination="@id/fragmentTopCollections" />
    </fragment>

    <fragment
        android:id="@+id/fragmentTopCollections"
        android:name="com.zhdanon.skillcinema.presentation.topMovies.FragmentTopCollections"
        android:label="FragmentTopCollections"
        tools:layout="@layout/fragment_top_collections" >
        <action
            android:id="@+id/action_fragmentTopCollections_to_fragmentDetailMovie"
            app:destination="@id/fragmentDetailMovie" />
    </fragment>
    <fragment
        android:id="@+id/fragmentDetailMovie"
        android:name="com.zhdanon.skillcinema.presentation.detailMovie.FragmentDetailMovie"
        android:label="FragmentDetailMovie"
        tools:layout="@layout/fragment_detail_movie" >
        <argument
            android:name="movieId"
            app:argType="integer" />
    </fragment>
</navigation>